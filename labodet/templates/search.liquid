{% paginate search.results by 100 %}
<div class="container" style="min-height: calc(100vh - 392.94px)">
  <div class="title-area search-title">
    <h1 class="page-title">
      {% if search.performed %}
        "{{ search.terms | escape }}" ({{ search.results_count }})
      {% else %}
        Search
      {% endif %}
    </h1>
  </div>
  
  {% if search.performed %}
    {% if search.results == empty %}  
      <p>Your search for "{{search.terms | escape}}" did not yield any results</p>              
    {% else %}  
  		<div class="prod-list">
        {% for item in search.results %}
          {% if item.object_type == 'product' %}
            {% render 'card-product', product: item %}
          {% endif %}
        {% endfor %}
      </div>
      
      <div class="page-list">
        {% for item in search.results %}
          {% if item.object_type != 'product' %}
            <div class="page-list__card">
              <h3 class="page-list__term">{{ search.terms | escape }}</h3>
              <h2 class="page-list__title">
                {{ item.title }}
              </h2>
              <a class="page-list__link" href="{{ item.url | split:'?' | first }}">
                {{ shop.domain }}{{ item.url | split:'?' | first }}
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  {% else %}
  	<div class="search-form-area">
      {% render 'form-search' %}
    </div>
  {% endif %}
</div>
{% endpaginate %}