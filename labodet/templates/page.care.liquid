    <div class="container">
      <div class="row pb-5">
        <div class="labo-standard-page__title-wrapper col-md-12">
          <h1 class="labo-standard-page-title labo-det-lheight-62 mt-0 border-bottom">
            {{ page.title }}
          </h1>
        </div>
  
