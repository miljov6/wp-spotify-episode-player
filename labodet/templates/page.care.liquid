        <div class="col-md-2"></div>
  
        <div class="labo-standard-page__grey-bg-wrapper col-md-5">
          {% if page.metafields.custom_fields["right_column_content"] != blank %}
            <div class="labo-product-page-grey-bg h-100 align-items-center justify-content-center py-4 p-md-5">
              {{ page.metafields.custom_fields["right_column_content"] }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
  
