<section class="labo-collection-grid">

  <div class="container">

    <div class="row py-4 py-md-4">

       <div class="col-md-3 px-4 px-md-3 block_left">

        <div class="row h-100 pr-md-3">

          {% for block in section.blocks offset:1 limit: 2 %}

          {% assign collection = collections[block.settings.collection] %}

          <div class="col-md-6 mt-2 mb-5 my-md-1 pl-md-2 pr-md-0">

            <a href="{{ collection.url }}" class="labo-collection-grid-item labo-mob-sec-image">

              <img  loading="lazy"  src="{{ collection.image | img_url: '400x' }}" data-src="{{ collection.image | img_url: '400x' }}" class="labo-collection-image lazyload">

              <h2 class="labo-collection-title">

                {{ collection.title }}

              </h2>

            </a>

          </div>

          {% endfor %}

        </div>

      </div>

      

      <div class="col-md-6 mb-5 my-md-1 pr-md-0 pl-md-3 px-4 block_center">

        {% for block in section.blocks limit: 1 %}

        {% assign collection = collections[block.settings.collection] %}

        <a href="{{ collection.url }}" class="labo-collection-grid-item labo-mob-first-image">

          <img  loading="lazy"  src="{{ collection.image | img_url: '733x' }}" data-src="{{ collection.image | img_url: '733x' }}" class="labo-collection-image lazyload">

          <h2 class="labo-collection-title">

            {{ collection.title }}

          </h2>

        </a>

        {% endfor %}

      </div>

      <div class="col-md-3 px-4 px-md-3 block_right">

        <div class="row h-100 pr-md-3">

          {% for block in section.blocks offset:3 %}

          {% assign collection = collections[block.settings.collection] %}



          <div class="col-md-6 mt-2 mb-5 my-md-1 pl-md-2 pr-md-0">

            <a href="{{ collection.url }}" class="labo-collection-grid-item labo-mob-sec-image">

              <img  loading="lazy"  src="{{ collection.image | img_url: '400x' }}" data-src="{{ collection.image | img_url: '400x' }}" class="labo-collection-image lazyload">

              <h2 class="labo-collection-title">

                {{ collection.title }}

              </h2>

            </a>

          </div>

          {% endfor %}



        </div>

      </div>

    </div>

  </div>

</section>

