  <div class="inner">

    {% for block in section.blocks %}

      {% assign collection = collections[block.settings.collection] %}

      <div class="collection {{ collection.handle}} item-{{ forloop.index }}">
        <a href="{{ collection.url }}" class="collection-link">
          <img  loading="lazy"  src="{{ collection.image | img_url: 'master' }}"  data-src="{{ collection.image | img_url: 'master' }}"  {% if forloop.index == 1 %}width="610px" height="733px" {% else %} width="350px" height="364px"{% endif %} alt="{{ collection.image.alt }}" class="collection-image">
          
