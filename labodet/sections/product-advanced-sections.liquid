{% if section.settings.show_advanced_section == true %}
{% if product.metafields.custom_fields["advanced_sections"] != blank %}
<section class="labo-product-advanced-sections mt-md-4 pt-md-2 border-md-bottom">
  <div class="container">
    {% assign separator = "|###|" %}
    {% assign section_title_array = product.metafields.custom_fields["section_title"] | split: separator %}
    {% assign text_content_array = product.metafields.custom_fields["text_content"] | split: separator %}
    {% assign image_array = product.metafields.custom_fields["image"] | split: separator %}
    {% assign style_array = product.metafields.custom_fields["style"] | split: separator %}
    {% assign fc_keys = product.metafields.custom_fields["advanced_sections"] | split: "," %}
    {% for i in fc_keys %}
    {% assign index = i | plus: 0 %}
    <div class="row">
      {% if style_array[index] == 'Right Image, Left Text' %}
      <div class="col-md-6 p-0 py-md-2 px-md-2 labo-css-order-2">
        <div class="labo-product-page-grey-bg h-100 align-items-center justify-content-center d-flex py-4 px-3 p-md-5">
          <div class="labo-max-w-378">
            {% unless section_title_array[index] == blank %}
            <h2 class="labo-product-advanced-title">{{ section_title_array[index] }}</h2>
            {% endunless %}
            {% unless text_content_array[index] == blank %}
            <p class="m-0">{{ text_content_array[index] | strip_html | strip | strip_newlines }}</p>
            {% endunless %}
          </div>
        </div>
      </div>
      <div class="col-md-6 p-0 py-md-2 px-md-2 labo-css-order-1 img-order">
        <img  loading="lazy"  src="{{ image_array[index] }}" data-src="{{ image_array[index] }}" class="d-block w-100">
      </div>
      {% else %}
      <div class="col-md-6 p-0 py-md-2 px-md-2 labo-css-order-1 img-order">
        <img  loading="lazy"  src="{{ image_array[index] }}" data-src="{{ image_array[index] }}" class="d-block w-100">
      </div>
      <div class="col-md-6 p-0 py-md-2 px-md-2 labo-css-order-2">
        <div class="labo-product-page-grey-bg h-100 align-items-center justify-content-center d-flex py-4 px-3 p-md-5">
          <div class="labo-max-w-378">
            {% unless section_title_array[index] == blank %}
            <h2 class="labo-product-advanced-title">{{ section_title_array[index] }}</h2>
            {% endunless %}
            {% unless text_content_array[index] == blank %}
            <p class="m-0">{{ text_content_array[index] | strip_html | strip | strip_newlines }}</p>
            {% endunless %}
          </div>
        </div>
      </div>
      {% endif %}
    </div>
    {% endfor %}
  </div>
</section>
{% endif %}
{% endif %}

