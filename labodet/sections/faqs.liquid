{% assign num_columns = 2 | times: 1.0 %}
{% assign num_blocks = section.blocks.size %}
{% assign num_blocks_per_column = num_blocks | divided_by: num_columns | ceil %}

<div class="col">
  {% for block in section.blocks %}

    {% capture faq_id %}faq_{{ forloop.index }}{% endcapture %}

    <div class="faq" {{ block.shopify_attributes }}>
      <a class="question collapsed" data-toggle="collapse" href="#{{ faq_id }}">
        {{ block.settings.title }}
         <div class="arrow-icon">
        		<span class="left-bar"></span>
        		<span class="right-bar"></span>
      		</div>
      </a>
      <div class="answer collapse" id="{{ faq_id }}">
        <div class="answer-inner">
          {{ block.settings.answer }}
        </div>
      </div>
    </div>
  
  	{% if forloop.index == num_blocks_per_column %}
		</div>
		<div class="col">
  	{% endif %}

  {% endfor %}
</div>

{% schema %}
  {
    "name": "FAQs",
	"class": "section-faqs",
    "blocks": [
      {
        "type": "faq",
        "name": "FAQ",
        "settings": [
          	{
				"type": "text",
              	"id": "title",
              	"label": "Question"
          	},{
				"type": "richtext",
   				"id": "answer",
   				"label": "Answer"
			}
        ]
      }
    ]
  }
{% endschema %}