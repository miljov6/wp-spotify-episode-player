{% if product.metafields.custom_fields["metalware"] != blank %}
{% assign separator = "|###|" %}
{% assign name_array = product.metafields.custom_fields["name"] | split: separator %}
{% assign color_array = product.metafields.custom_fields["color"] | split: separator %}
{% assign bg_image_array = product.metafields.custom_fields["bg_image"] | split: separator %}
{% assign link_array = product.metafields.custom_fields["link"] | split: separator %}
{% assign is_this_current_product_metal_array = product.metafields.custom_fields["is_this_current_product_metal"] | split: separator %}
{% assign fc_keys = product.metafields.custom_fields["metalware"] | split: "," %}
<div id="labo-Metal-swatch" class="swatch hidemobile labo-Color-swatch clearfix" data-option-index="0">
  <div class="labo-swatch-header d-none d-md-block header">Metalware: <span id="labo-product-current-Metal">{% for ii in fc_keys %}{% assign indexi = ii | plus: 0 %}{% if is_this_current_product_metal_array[indexi] == 'yes' %}{{ name_array[indexi] }}{% endif %}{% endfor %}</span></div>
  {% for i in fc_keys %}
  {% assign index = i | plus: 0 %}
  <div data-value="{{ name_array[index] }}" class="swatch-element color {{ name_array[index] }} available">
    <div class="tooltip">{{ name_array[index] }}</div>
    <label{% if is_this_current_product_metal_array[index] == 'yes' %} class="labo-label-active"{% endif %} style="background-color: {{ color_array[index] }};{% unless bg_image_array[index] == blank %} background-image: url({{ bg_image_array[index] }}){% endunless %}">
      <a href="{{ link_array[index] }}" class="w-100 h-100 d-block">
        <img class="crossed-out" src="{{ 'soldout.png' | asset_url }}">
      </a>
    </label>
  </div>
  {% endfor %}
</div>
{% endif %}
