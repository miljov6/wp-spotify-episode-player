          <div class="fc-field field__color-name">
            {{ color_name_array[index] }}
          </div>
          <div class="fc-field field__color-code">
            {{ color_code_array[index] }}
          </div>
          <div class="fc-field field__color-image">
            {{ color_image_array[index] }}
