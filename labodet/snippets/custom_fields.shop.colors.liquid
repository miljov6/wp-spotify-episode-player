{% if shop.metafields.custom_fields["colors"] != blank %}
  <div class="custom-field custom-field__colors custom-field__type--field-collection">
    <h3 class="custom-field--title">Colors</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign color_name_array = shop.metafields.custom_fields["color_name"] | split: separator %}
