<div class="labo-cart-form-popup" id="labo-cart-form-popup" data-cart-view="data-cart-view">
  <p rv-show="cart.item_count | lt 1">You don't have any items in your cart. {{cart.item_count}}</p>

  <div class="labo-cart-sidebar-item loop_9" rv-each-item="cart.items">
    {%- comment -%}
    <!-- <a class="labo-cart-item-remove" rv-data-cart-remove="index | plus 1">Remove</a> -->
    
    {%- endcomment -%}
    <a class="labo-cart-item-remove" href="#" rv-data-cart-update="index | plus 1" rv-data-cart-quantity="item.quantity | minus item.quantity">
      Remove
    </a>
  
    <div rv-show="cart.item_count | eq 0">
      You don't have any items in your cart.
    </div>
    <div class="labo-cart-item-image">
      <img class="d-block w-100" rv-src="{{item.featured_image.url}} | product_image_size '200x'">
    </div>
    <div class="labo-cart-item-details">
      <div class="labo-cart-item-title">
        <a rv-href="item.url" rv-text="{{item.product_title}}"></a>
      </div>

      <div class="labo-cart-product-details labo-hide-last-prop">
        <div class="labo-cart-variant-text" rv-each-property="item.propertyArray < properties">
         {{property.value}}
        </div>
      </div>

      <div class="labo-cart-product-details" rv-hide="item.options_with_values | empty">
        <div class="labo-cart-variant-text" rv-each-variant="item.options_with_values">
          <span rv-unless="variant.name | isDefaultVariant">{{variant.name}}: {{variant.value}}</span>
        </div>
      </div>

      <div class="labo-cart-product-details labo-properties labo-hide-first-prop" rv-hide="item.propertyArray | empty">
        <div class="labo-cart-variant-text" rv-each-property="item.propertyArray < properties">
           {{property.value}}
        </div>
      </div>

      <div class="labo-cart-quantity-price-action">
        <div class="labo-cart-quantity-action">
          <a class="labo-quant-button laboHasprevClass mr-2" href="#" rv-data-cart-update="index | plus 1" rv-data-cart-quantity="item.quantity | minus 1">
            <svg width="11" height="1" viewBox="0 0 11 1" fill="none" xmlns="http://www.w3.org/2000/svg">
              <line y1="0.5" x2="11" y2="0.5" stroke="black"/>
            </svg>
          </a>

          <span rv-text="item.quantity"></span>

          <a class="labo-quant-button laboHasnextClass lbhs1 ml-2" href="#" rv-data-cart-update="index | plus 1" rv-data-cart-quantity="item.quantity | plus 1">
            <svg width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg">
              <line y1="5.5" x2="11" y2="5.5" stroke="black"/>
              <line x1="5.5" y1="11" x2="5.5" stroke="black"/>
            </svg>
          </a>
        </div>

        <div class="labo-cart-price-action">
          <span class="labo-cart-price" rv-html="item.price | money Currency.currentCurrency"></span>
        </div>
      </div>
    </div>
  </div>

  <div class="labo-cart-footer" rv-show="cart.item_count | gt 0">
    <div class="labo-cart-shipping">
      <span class="labo-cart-shipping-title">Shipping</span>
      <span class="labo-cart-shipping-price" data-cart-subtotal>Free</span>
    </div>

    <div class="labo-cart-subtotal">
      <span class="labo-cart-subtotal-title">{{ 'cart.general.subtotal' | t }}</span>
      <!-- <div class="cart-count" data-cart-render="total_price_money">{{ cart.total_price | money }}</div> -->
      <span class="labo-cart-subtotal-price" rv-html="cart.total_price | money Currency.currentCurrency"></span>
    </div>
  </div>

  <div class="labo-cart-buttons" rv-show="cart.item_count | gt 0">
    <a href="/checkout" class="labo-cart-button">{{ 'cart.general.checkout' | t }}</a>
    {% comment %}
    {%- if shop.taxes_included -%}
      <p class="labo-taxes-calculated-at">Taxes calculated at checkout</p>
    {%- endif -%}
    {% endcomment %}
  </div>
</div>

<style>
  #Actual {
      background: silver;
      color: White;
      padding: 20px;
  }
  .slideup, .slidedown {
      max-height: 0;            
      overflow-y: hidden;
      -webkit-transition: max-height 0.5s ease-in-out;
      -moz-transition: max-height 0.5s ease-in-out;
      -o-transition: max-height 0.5s ease-in-out;
      transition: max-height 0.5s ease-in-out;
  }
  .slidedown {            
      max-height: 60px ;                    
  }
</style>

