<ul class="main-menu">
  {% for link in linklists[section.settings.main_menu].links %}

    <li class="link-item {% unless link.links == blank %} has-child{% if link.active or link.child_active %} labo-nav-first-level-page{% endif %}{% endunless %}">
      
      {% unless link.links == blank %}
      
        <a href="{{ link.url }}" class="link {% if link.active or link.child_active %} labo-nav-first-level-active{% endif %}">
          {{ link.title }}
        </a>
      
        <ul class="child-links">
          <li class="parent-item">
            <a href="{{ link.url }}" class="link">
              {% render 'icon-back' %}
              {{ link.title }}
            </a>
          </li>
          {% for clink in link.links %}
            <li {% if clink.active %}class="labo-nav-second-level-active"{% endif %}>
              <a href="{{ clink.url }}">
                {{ clink.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      
      {% else %}
      
        <a href="{{ link.url }}" class="link {% if link.active or link.child_active %} labo-nav-first-level-active{% endif %}">
          {{ link.title }}
      	</a>
      
      {% endunless %}
    </li>
  {% endfor %}
  
  <li class="link-item has-child currency-options">
    <a href="#" class="link ">
      Currency
    </a>
    {% form 'currency', id: 'sidebar-currency-selector' %}

        <ul class="child-links">
          <li class="parent-item">
            <a href="#" class="link ">
              {% render 'icon-back' %}
              Currency: {{ cart.currency.iso_code }}
            </a>
          </li>
          <ul class="item-scroll">
            {% for currency in shop.enabled_currencies %}
              <li class="{{ currency.iso_code }} {% if currency == cart.currency %} active{% endif %}">
                <label>
                  <input class="offscreen" type="radio" name="currency" value="{{ currency.iso_code }}" {% if currency == cart.currency %}checked{% endif %}>
                  {{ currency.iso_code }}
                </label>
              </li>
            {% endfor %}
          </ul>
        </ul>

    {% endform %}
  </li>
</ul>
<div class="bottom-area">
  <div class="currency_selector">
      <ul class="currency_popup_mobile">
        <li>
            <a href="javascript:void(0);" >Currency: <span class="current_currency">{{ cart.currency.iso_code }}</span></a>
        </li>
      </ul>
  </div>
  
  <div class="search-form-wrapper">
      {% render 'form-search' %}
  </div>
</div>

<script defer>
  
  var main_menu = $(".labo-mobile-nav .main-menu");
  var closingTimer;
  
  if (main_menu.find(".link-item").hasClass("active")) {
    main_menu.addClass("children-active");
  }
  
  $(".parent-item").click(function(e) {
    e.preventDefault();
    main_menu.removeClass("children-active");
    main_menu.find(".link-item").removeClass("active");
  });
  
  $(".link-item.has-child > a").click(function(e) {
    e.preventDefault();
    $(".link-item.active").removeClass("active");
    $(this).parent().addClass("active");
    main_menu.addClass("children-active");
  });
  
  $(".currency_popup_mobile a").click(function(e) {
    e.preventDefault();
    $(".link-item.currency-options > a").trigger('click');
  });
</script>


